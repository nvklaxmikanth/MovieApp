<% layout('layouts/boilerplate') %>
<h3 class="justify-content-center"><%=msg%></h3>
<div class="mt-3 container d-flex flex-wrap justify-content-evenly">
    <% for(let v of data.results){%>
        <div class="card card-shadow mb-3" style="width: 20rem;">
            <% if(v.poster_path == null) { %>
                <img src="https://res.cloudinary.com/nvklaxmikanth/image/upload/v1639225340/noposter_azbcij.jpg" class="card-img-top">
            <% } else { %>
                <img src="https://image.tmdb.org/t/p/w300<%=v.poster_path%>" class="card-img-top">
            <% } %>  
            <div class="card-body">
                <h5 class="card-title fw-bold"><%=v.title%></h5>
                <p class="card-text"><%=v.overview.substring(0,200)%>...</p>
                <a href="#" class="position-absolute bottom-0 end-0 btn btn-warning"><%=v.vote_average%> </a>
            </div>
        </div>
    <% }%>
</div>